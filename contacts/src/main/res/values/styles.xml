<resources>

	<style name="Contacts" />

	<style name="Contacts.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="toolbarStyle">@style/Contacts.Toolbar</item>

		<item name="contactPhotoThumbnailStyle">@style/Contacts.ContactPhotoThumbnailView</item>
		<item name="phoneNumberTextAppearance">@style/Contacts.TextAppearance.PhoneNumber</item>
	</style>

	<style name="Contacts.TextAppearance" parent="Base.TextAppearance.AppCompat.Medium" />

	<style name="Contacts.Toolbar" parent="Widget.AppCompat.Toolbar">
		<item name="titleTextAppearance">@style/Contacts.TextAppearance.Toolbar.Title</item>
		<item name="android:background">?attr/colorPrimary</item>
	</style>

	<style name="Contacts.TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Contacts.ContactView">
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingStart">@dimen/content_inset_start</item>
		<item name="android:paddingEnd">@dimen/content_inset_end</item>
		<item name="android:foreground">?selectableItemBackground</item>
	</style>

	<style name="Contacts.ContactPhotoThumbnailView">
		<item name="android:layout_width">@dimen/photo_thumbnail_size</item>
		<item name="android:layout_height">@dimen/photo_thumbnail_size</item>
		<item name="android:layout_marginEnd">10dp</item>
	</style>

	<style name="Contacts.TextAppearance.PhoneNumber">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/black</item>
	</style>
</resources>
