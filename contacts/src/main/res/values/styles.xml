<resources>

	<style name="Contacts" />

	<style name="Contacts.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="toolbarStyle">@style/Contacts.Toolbar</item>
	</style>

	<style name="Contacts.Toolbar" parent="Widget.AppCompat.Toolbar">
		<item name="titleTextAppearance">@style/Contacts.TextAppearance.Toolbar.Title</item>
		<item name="android:background">?attr/colorPrimary</item>
	</style>

	<style name="Contacts.TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textColor">@color/white</item>
	</style>
</resources>
